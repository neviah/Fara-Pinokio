{
  "run": [
    {
      "method": "shell.run",
      "params": {
        "message": "Create virtual environment",
        "path": "python -m venv env"
      }
    },
    {
      "method": "shell.run",
      "params": {
        "venv": "env",
        "message": "Upgrade pip",
        "path": "python -m pip install --upgrade pip"
      }
    },
    {
      "method": "shell.run",
      "params": {
        "venv": "env",
        "message": "Install requirements.txt",
        "path": "pip install -r requirements.txt"
      }
    },
    {
      "method": "shell.run",
      "params": {
        "venv": "env",
        "message": "Install core packages",
        "path": "pip install gradio playwright openai pillow tenacity numpy requests"
      }
    },
    {
      "method": "powershell.run",
      "params": {
        "message": "Clone Fara repository",
        "path": "if (!(Test-Path fara_repo)) { git clone https://github.com/microsoft/fara.git fara_repo }"
      }
    },
    {
      "method": "shell.run",
      "params": {
        "venv": "env",
        "message": "Install Fara (editable)",
        "path": "pip install -e ./fara_repo"
      }
    },
    {
      "method": "shell.run",
      "params": {
        "venv": "env",
        "message": "Install Playwright browsers",
        "path": "playwright install"
      }
    }
  ]
}